<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record forcecreate="True" id="decimal_point" model="decimal.precision">
            <field name="name">Custom Rating Value</field>
            <field name="digits">3</field>
        </record>

        <record id="hostel_room_69" model="hostel.room">
            <field name="name">Hostel Room 69</field>
            <field name="occupancy">96</field>
            <field name="room_number">69</field>
        </record>

        <record id="base.main_company" model="res.company">
            <field name="name">Pack Publishing</field>
        </record>

        <record id="res_partner_packt" model="res.partner">
            <field name="name">Penguin Random House</field>
            <field name="city">Birmingham</field>
            <field name="country_id" ref="base.uk" />
        </record>

        <record id="room_category_all" model="hostel.room.category" forcecreate="False">
            <field name="name">All Rooms</field>
        </record>

        <!-- Temp category to delete, in real case this record created from another module -->
        <record id="room_category_to_remove1" model="hostel.room.category">
            <field name="name">Single Sharing</field>
        </record>
        <record id="room_category_to_remove2" model="hostel.room.category">
            <field name="name">Double Sharing</field>
        </record>

        <record id="room_category_not_to_remove" model="hostel.room.category">
            <field name="name">Triple Sharing</field>
        </record>

        <delete model="hostel.room.category" id="room_category_to_remove1"/>
        <delete model="hostel.room.category" search="[('name', 'ilike','Double')]"/>

        <function model="hostel.room" name="_update_room_rent_amount"/>
        <function model="hostel.room" name="_update_room_cost_price" eval="(ref('room_category_all'), 20)"/>
    </data>

</odoo>
