<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="hostel_student_form" model="ir.ui.view">
            <field name="name">Hostel Student Form</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <form string="Hostel Student">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="gender"/>
                            <field name="active"/>
                            <field name="room_id"/>
                            <field name="hostel_id"/>
                            <field name="admission_date"/>
                            <field name="discharge_date"/>
                            <field name="duration"/>
                            <field name="partner_id"/>
                        </group>
                    </sheet>
                    <!-- Discuss widgets -->
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="hostel_student_list" model="ir.ui.view">
            <field name="name">Hostel Student List</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <list string="Hostel Student">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="active"/>
                    <field name="room_id"/>
                    <field name="hostel_id"/>
                    <field name="admission_date"/>
                    <field name="discharge_date"/>
                    <field name="duration"/>
                    <field name="partner_id"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hostel_student">
            <field name="name">Hostel Student</field>
            <field name="res_model">hostel.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_hostel_student" parent="menu_hostel_main" action="action_hostel_student" name="Hostel Student" sequence="4"/>
    </data>
</odoo>