<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="hostel_room_form_view" model="ir.ui.view">
        <field name="name">Hostel Room Form</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form string="Hostel Room">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    <button name="make_available" type="object" string="Make Available" class="btn-primary"/>
                    <button name="make_closed" type="object" string="Make Closed" class="btn-primary"/>
                    <button name="log_all_members" type="object" string="Log Members" class="btn-primary"/>
                    <button name="update_room_no" type="object" string="Update Room No" class="btn-primary"/>
                    <button name="find_room" type="object" string="Find Room" class="btn-primary"/>
                    <button name="mapped_rooms" class="btn-primary" string="Get Student Names" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="room_type"/>
                        <field name="room_number"/>
                        <field name="floor"/>
                        <field name="occupancy"/>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="availability"/>
                        <field name="image"/>
                        <field name="active"/>
                        <field name="hostel_id"/>
                        <field name="member_ids" widget="many2many_tags"/>
                        <field name="rent_amount"/>
                        <field name="cost_price"/>
                        <field name="currency_id"/>
                        <field name="remarks"/>
                        <field name="previous_room_id" />
                    </group>
                </sheet>
                <!-- Discuss widgets -->
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="hostel_room_list_view" model="ir.ui.view">
        <field name="name">Hostel Room List</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <list string="Hostel Room">
                <field name="name"/>
                <field name="description"/>
                <field name="room_type"/>
                <field name="room_number"/>
                <field name="floor"/>
                <field name="occupancy"/>
                <field name="availability"/>
                <field name="image"/>
                <field name="active"/>
                <field name="hostel_id"/>
                <field name="rent_amount"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="action_hostel_room">
        <field name="name">Hostel Room</field>
        <field name="res_model">hostel.room</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_hostel_room" name="Hostel Room" parent="menu_hostel_main" action="action_hostel_room" sequence="3"/>
</odoo>