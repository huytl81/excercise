<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <!-- Form View -->
    <record id="hostel_room_category_form_view" model="ir.ui.view">
        <field name="name">Hostel Room Categories Form</field>
        <field name="model">hostel.room.category</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="create_categories" string="Create Categories" class="btn-primary"/>
                    <button type="object" name="create_categories_batch" string="Create Categories Batch" class="btn-primary"/>
                </header>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <group>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="hostel_room_category_list_view" model="ir.ui.view">
        <field name="name">Hostel Room List</field>
        <field name="model">hostel.room.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id='hostel_room_category_action' model='ir.actions.act_window'>
        <field name="name">Hostel Room Categories</field>
        <field name="res_model">hostel.room.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Hostel Room Categories" id="hostel_room_category_menu" parent="menu_hostel_main" action="hostel_room_category_action"/>

</odoo>