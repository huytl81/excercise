<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.module.category" id="module_room_category_hostel">
        <field name="name">Hostel Room Category</field>
        <field name="description">Hostel Management</field>
        <field name="sequence">60</field>
    </record>

    <record model="res.groups" id="group_hostel_room_category_user">
        <field name="name">Hostel Room Category User Group</field>
        <field name="category_id" ref="module_room_category_hostel"/>
        <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record model="res.groups" id="group_hostel_room_category_manager">
        <field name="name">Hostel Room Category Manager Group</field>
        <field name="category_id" ref="module_room_category_hostel"/>
        <field name="implied_ids" eval="[(4,ref('group_hostel_room_category_user'))]"/>
        <!--<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>-->
    </record>
</odoo>