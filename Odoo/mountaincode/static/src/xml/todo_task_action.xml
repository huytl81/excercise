<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="todo_task_action">
         <div class="row mx-2 mt-3">
            <div class="col-lg-6">
                <button class="btn btn-primary" t-on-click="addTask">New Task</button>
                <!--<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#taskModal" t-on-click="addTask">New</button>-->
            </div>
            <div class="col-lg-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search here..." t-ref="searchInput" t-on-keyup="searchTasks"/>
                    <button class="btn btn-outline-primary" t-on-click="searchTasks">Search</button>
                </div>
            </div>
        </div>

        <!-- List Todo Task -->
        <div class="todo-task-container">
            <div class="row m-2">
                <div class="col">
                    <table class="table table-striped table-hover border">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Responsible</th>
                                <th scope="col">Deadline</th>
                                <th scope="col">Is Done</th>
                                <th scope="col">Color</th>
                                <th scope="col">Priority</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="state.taskList">
                                <tr t-foreach="state.taskList || []" t-as="task" t-key="task.id">
                                    <td>
                                        <span t-esc="task?.name || ''"/>
                                    </td>
                                    <td>
                                        <span t-esc="getUserName(task?.user_id)"/>
                                        <!--<span t-esc="task?.user_id?.name || ''"/>-->
                                    </td>
                                    <td>
                                        <span t-esc="task?.deadline || ''"/>
                                    </td>
                                    <td>
                                        <input type="checkbox" class="form-check-input" t-att-id="task?.id" t-att-checked="task.is_done" t-on-change="(el) => this.updateComplete(el, task)"/>
                                    </td>
                                    <td>
                                        <input type="color" class="form-control form-control-color"  t-att-value="task?.color || '#000000'" title="Choose your color" t-on-change="(el) => this.updateColor(el, task)"/>
                                    </td>
                                    <td>
                                        <span t-esc="task?.priority || ''"/>
                                    </td>
                                    <td>
                                        <!--<button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#taskModal" t-on-click="()=>this.editTask(task)">Edit</button>-->
                                        <button class="btn btn-success me-2" t-on-click="() => this.editTask(task)">Edit</button>
                                        <button class="btn btn-danger" t-on-click="() => this.deleteTask(task)">Delete</button>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

