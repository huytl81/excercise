<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="dog_wizard_view_form" model="ir.ui.view">
        <field name="name">Dog Wizard Form</field>
        <field name="model">dog.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Dog Wizard Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="bod"/>
                    </group>
                    <group>
                        <field name="gender"/>
                        <field name="color"/>
                    </group>
                </sheet>
                <footer>
                    <button name="create_dog" type="object" string="Create" class="highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
