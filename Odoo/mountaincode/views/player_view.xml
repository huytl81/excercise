<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="player_view_list" model="ir.ui.view">
        <field name="name">List of players</field>
        <field name="model">player</field>
        <field name="arch" type="xml">
            <list string="Players">
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="position"/>
                <field name="country"/>
                <field name="gender"/>
                <field name="weight"/>
                <field name="height"/>
                <field name="transfer"/>
                <field name="club_id"/>
                <field name="dog_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="player_view_form" model="ir.ui.view">
        <field name="name">Player form</field>
        <field name="model">player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <header>
                    <button name="action_check" string="Check" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="country"/>
                            <field name="date_of_birth"/>
                            <field name="transfer"/>
                            <field name="club_id"/>
                        </group>
                        <group>
                            <field name="resume"/>
                            <field name="position"/>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="dog_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="player_action" model="ir.actions.act_window">
        <field name="name">Players</field>
        <field name="res_model">player</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- menu -->
    <menuitem id="player_menu" name="Players" parent="manager_menu" action="player_action" sequence="2"/>
