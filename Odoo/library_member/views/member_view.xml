<odoo>
    <record id="view_form_member" model="ir.ui.view">
        <field name="name">Library Member Form View</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Buttons will go here -->
                </header>
                <sheet>
                    <!-- Content goes here: -->
                    <group name="group_top">
                        <group name="group_left">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="card_number"/>
                        </group>
                        <group name="group_right"/>
                    </group>
                </sheet>
                <!-- mail mixin fields -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_list_member" model="ir.ui.view">
        <field name="name">Member List</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="card_number"/>
            </list>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
        <field name="name">Member Filters</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="filter_inactive"
                        string="Inactive"
                        domain="[('active','=',True)]"/>
                <filter name="filter_active"
                        string="Active"
                        domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>
</odoo>