<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='library_book_return_wizard' model='ir.ui.view'>
        <field name='name'>library book return wizard</field>
        <field name='model'>library.return.wizard</field>
        <field name='arch' type='xml'>
            <form string="Return books">
                <sheet>
                    <group>
                        <field name='borrower_id'/>
                    </group>
                    <group>
                        <field name='book_ids'/>
                    </group>
                </sheet>
                <footer>
                    <button string='Return Books' name='books_returns' class='btn-primary' type='object'/>
                    <button string='Cancel' class='btn-default' special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

</odoo>