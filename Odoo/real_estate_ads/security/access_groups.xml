<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_estate" model="ir.module.category">
        <field name="name">Estate Category</field>
        <field name="description">Estate related permissions</field>
        <field name="sequence">20</field>
    </record>
    <record id="group_estate_property_user" model="res.groups">
        <field name="name">Estate Property User</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_demo'))]"/>
    </record>
    <record id="group_estate_property_manager" model="res.groups">
        <field name="name">Estate Property Manager</field>
        <field name="category_id" ref="module_category_estate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_property_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin')), (4, ref('base.user_root'))]"/>
    </record>
</odoo>