<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_extend_offer_deadline" model="ir.actions.server">
        <field name="name">Extend Offer Deadline</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="binding_model_id" ref="model_estate_property_offer"/>
        <field name="state">code</field>
        <field name="code">
            records.extend_offer_deadline()
        </field>
    </record>

    <record id="ir_cron_extend_offer_deadline" model="ir.cron">
        <field name="name">Extend Offer Deadline Everyday</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="state">code</field>
        <field name="code">
            model._extend_offer_deadline()
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>