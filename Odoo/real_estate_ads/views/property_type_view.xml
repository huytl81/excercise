<?xml version="1.1" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">Estate Property Type List View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Estate Property Type List">
                <field name="name" string="Property Type"/>
            </list>
        </field>
    </record>

    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">Estate Property Type Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property Type Form">
                <sheet>
                    <group>
                        <field name="name" string="Property Type"/>
                    </group>
                </sheet>
                <!-- Discuss widgets -->
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_property_type_list_view"/>
    </record>

    <menuitem id="estate_property_settings" name="Settings" parent="estate_menu_root" sequence="10"/>
    <menuitem id="estate_property_type_menu" name="Property Types" parent="estate_property_settings" action="estate_property_type_action" sequence="10"/>
</odoo>