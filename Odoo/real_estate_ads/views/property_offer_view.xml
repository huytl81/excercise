<?xml version="1.1" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">Estate Property Offer List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Estate Property Offer List" 
                    decoration-danger="state == 'refused'" 
                    decoration-warning="state == 'pending'" 
                    decoration-info="state == 'accepted'">
                <field name="partner_id" string="Customer"/>
                <field name="price" string="Price"/>
                <field name="currency_id"/>
                <field name="property_id" string="Property"/>
                <field name="validity" string="Validity (days)"/>
                <field name="state" string="Status" widget="badge"
                    decoration-danger="state == 'refused'" 
                    decoration-warning="state == 'pending'" 
                    decoration-info="state == 'accepted'"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Estate Property Offer Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer Form">
                <sheet>
                    <group>
                        <group>
                            <field name="price" string="Price"/>
                            <field name="currency_id"/>
                            <field name="state" string="Status" widget="selection_badge"/>
                            <field name="partner_id" string="Customer"/>
                            <field name="property_id" string="Property"/>
                        </group>
                        <group>
                            <field name="created_date" string="Created Date"/>
                            <field name="validity" string="Validity (days)"/>
                            <field name="deadline" string="Deadline"/>
                            <field name="partner_email" string="Email"/>
                            <field name="partner_phone" string="Phone"/>
                        </group>
                    </group>
                </sheet>
                <!-- Discuss widgets -->
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_gantt_view" model="ir.ui.view">
        <field name="name">Estate Property Offer Gantt View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <gantt string="Estate Property Offer Gantt View"
                   date_start="created_date"
                   date_stop="deadline"
                   default_group_by="partner_id">
            </gantt>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form,gantt</field>
        <field name="view_id" ref="estate_property_offer_list_view"/>
    </record>

    <menuitem id="estate_property_offer_menu" name="Property Offers" parent="estate_menu_ads" action="estate_property_offer_action" sequence="20"/>
</odoo>